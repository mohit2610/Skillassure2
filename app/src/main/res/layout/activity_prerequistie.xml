<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresentationLayer.Activities.PrerequistieActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mjs.skillassure.Utilities.LatoBoldText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16sp"
                android:textSize="20sp"
                android:textColor="@color/shadow_black"
                android:text="@string/Prerequisite"/>

            <com.mjs.skillassure.Utilities.LatoMediumText
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/shadow_black2"
                android:text="@string/Lorems"/>
            <com.mjs.skillassure.Utilities.LatoMediumText
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/shadow_black2"
                android:text="@string/Lorems"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="16sp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/dis_agree_button"
                    style="@style/OutlinedButton"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/shadow_black"
                    android:layout_centerVertical="true"
                    android:text="@string/disagree"
                    android:textAllCaps="false"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/agree_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Agree"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>