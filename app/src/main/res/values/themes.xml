<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skillassure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/somke_white</item>
        <item name="colorSecondaryVariant">@color/somke_white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/somke_white</item>
        <item name="statusBarScrim">@color/black</item>
        <item name="statusBarBackground">@color/black</item>
        <item name="statusBarForeground">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Skillassure.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Skillassure.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Skillassure.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>